<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="#ffffff"
    android:orientation="horizontal">

					<Button
						android:id="@+id/cmdErrorListUpdate"
						android:layout_width="100dp"
						android:layout_height="wrap_content"
						android:layout_column="1"
						android:text="Status"
						android:textSize="15sp" />

					<TextView android:id="@+id/v_vill"
				         android:layout_width="80sp"
				         android:gravity="center"
				         android:layout_column="0"
				         android:layout_height="wrap_content"
						android:visibility="gone"/>

				    <TextView android:id="@+id/v_bari"
				         android:layout_width="80sp"
				         android:gravity="center"
				         android:layout_column="1"
				         android:layout_height="wrap_content"
						android:visibility="gone"/>

				    <TextView android:id="@+id/v_hh"
				         android:layout_width="80sp"
				         android:gravity="center"
				         android:layout_column="2"
				         android:layout_height="wrap_content"
						android:visibility="gone"/>

					<TextView android:id="@+id/v_Name"
						android:layout_width="210sp"
						android:gravity="left"
						android:layout_column="3"
						android:layout_height="wrap_content"/>

					<TextView android:id="@+id/v_Mslno"
						android:layout_width="100sp"
						android:gravity="center"
						android:layout_column="3"
						android:layout_height="wrap_content"/>

					<TextView android:id="@+id/v_Status"
						android:layout_width="100sp"
						android:gravity="center"
						android:layout_column="4"
						android:layout_height="wrap_content"
						android:visibility="gone"/>

					<TextView android:id="@+id/v_note"
						android:layout_width="500sp"
						android:gravity="left"
						android:layout_column="5"
						android:layout_height="wrap_content"/>

</LinearLayout>
 
